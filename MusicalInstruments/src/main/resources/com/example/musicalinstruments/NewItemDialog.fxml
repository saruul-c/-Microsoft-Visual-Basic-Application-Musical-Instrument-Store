<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="150" prefWidth="300" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.musicalinstruments.NewItemDialogController">
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
        <children>
            <Label text="Item Type:" />
            <TextField fx:id="txtNewItem" />
        </children>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <children>
            <Button onAction="#addItemType" text="OK" />
            <Button onAction="#cancelDialog" text="Cancel" />
        </children>
    </HBox>
</VBox>
